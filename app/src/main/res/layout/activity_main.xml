<androidx.appcompat.widget.LinearLayoutCompat
        android:background="#FFF2AC"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dimens200dp"
            android:layout_height="@dimen/dimens200dp"
            android:src="@drawable/morango"
            android:id="@+id/imgFrutas"/>

    <androidx.appcompat.widget.AppCompatButton
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#6B94F8EF"
            android:onClick="trocarImagem"
            android:text="@string/txt_mudaimagem" />


</androidx.appcompat.widget.LinearLayoutCompat>
